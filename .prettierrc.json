{
    "useTabs": false,
    "arrowParens": "avoid",
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
    "overrides": [
        { "files": "*.yml", "options": { "tabWidth": 2 } },
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte",
                "svelteStrictMode": true,
                "svelteAllowShorthand": true
            }
        }
    ]
}
