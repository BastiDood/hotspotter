{
    "name": "hotspotter",
    "version": "0.0.0",
    "type": "module",
    "packageManager": "pnpm@9.0.4",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "db:init": "initdb -E UTF8 -D data",
        "db:start": "postgres -D data",
        "db:migrate": "psql -d postgres -f postgres/init.sql -1",
        "sync:cap": "cap sync",
        "sync:svelte": "svelte-kit sync",
        "run:android": "cap run android",
        "fmt": "prettier --check .",
        "fmt:fix": "prettier --write .",
        "lint": "concurrently pnpm:lint:*",
        "lint:html": "linthtml src/**/*.html",
        "lint:css": "stylelint src/**/*.css",
        "lint:js": "eslint **/*.{js,svelte,ts}",
        "lint:svelte": "svelte-check --tsconfig ./tsconfig.json",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "devDependencies": {
        "@capacitor/android": "^6.0.0",
        "@capacitor/app": "^6.0.0",
        "@capacitor/cli": "^6.0.0",
        "@capacitor/core": "^6.0.0",
        "@capacitor/filesystem": "^6.0.0",
        "@capacitor/geolocation": "^6.0.0",
        "@capacitor/preferences": "^6.0.0",
        "@easepick/amp-plugin": "^1.2.1",
        "@easepick/core": "^1.2.1",
        "@easepick/datetime": "^1.2.1",
        "@easepick/lock-plugin": "^1.2.1",
        "@easepick/preset-plugin": "^1.2.1",
        "@easepick/range-plugin": "^1.2.1",
        "@linthtml/linthtml": "^0.9.6",
        "@linthtml/linthtml-config-recommended": "^0.1.0",
        "@skeletonlabs/skeleton": "^2.10.0",
        "@skeletonlabs/tw-plugin": "^0.4.0",
        "@steeze-ui/heroicons": "^2.3.0",
        "@steeze-ui/svelte-icon": "^1.5.0",
        "@sveltejs/adapter-static": "^3.0.1",
        "@sveltejs/adapter-vercel": "^5.3.0",
        "@sveltejs/kit": "^2.5.9",
        "@sveltejs/vite-plugin-svelte": "^3.1.0",
        "@tailwindcss/typography": "^0.5.13",
        "@types/cookie": "^0.6.0",
        "@types/path-browserify": "^1.0.2",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "@typescript-eslint/parser": "^7.9.0",
        "autoprefixer": "^10.4.19",
        "concurrently": "^8.2.2",
        "cookie": "^0.6.0",
        "date-fns": "^3.6.0",
        "devalue": "^5.0.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.39.0",
        "h3-js": "^4.1.0",
        "itertools": "^2.3.1",
        "jose": "^5.3.0",
        "ol": "^9.2.2",
        "path-browserify": "^1.0.1",
        "postgres": "^3.4.4",
        "prettier": "^3.2.5",
        "prettier-plugin-svelte": "^3.2.3",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "stylelint": "^16.5.0",
        "stylelint-config-standard": "^36.0.0",
        "stylelint-config-tailwindcss": "^0.0.7",
        "svelte": "^4.2.17",
        "svelte-check": "^3.7.1",
        "tailwindcss": "^3.4.3",
        "typescript": "^5.4.5",
