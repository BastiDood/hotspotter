{
    "name": "hotspotter",
    "version": "0.0.0",
    "type": "module",
    "packageManager": "pnpm@8.15.1",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "db:init": "initdb -E UTF8 -D data",
        "db:start": "postgres -D data",
        "db:migrate": "psql -d postgres -f postgres/init.sql -1",
        "sync:cap": "cap sync",
        "sync:svelte": "svelte-kit sync",
        "run:android": "cap run android",
        "fmt": "prettier --check .",
        "fmt:fix": "prettier --write .",
        "lint": "pnpm lint:html && pnpm lint:css && pnpm lint:js && pnpm lint:svelte",
        "lint:html": "linthtml src/**/*.html",
        "lint:css": "stylelint src/**/*.css",
        "lint:js": "eslint **/*.{js,svelte,ts}",
        "lint:svelte": "svelte-check --tsconfig ./tsconfig.json"
    },
    "devDependencies": {
        "@capacitor/android": "6.0.0-rc.0",
        "@capacitor/cli": "6.0.0-rc.0",
        "@capacitor/core": "6.0.0-rc.0",
        "@capacitor/filesystem": "6.0.0-beta.1",
        "@capacitor/geolocation": "6.0.0-beta.1",
        "@capacitor/preferences": "6.0.0-beta.1",
        "@linthtml/linthtml": "^0.9.5",
        "@linthtml/linthtml-config-recommended": "^0.1.0",
        "@skeletonlabs/skeleton": "^2.7.1",
        "@skeletonlabs/tw-plugin": "^0.3.1",
        "@steeze-ui/heroicons": "^2.3.0",
        "@steeze-ui/svelte-icon": "^1.5.0",
        "@sveltejs/adapter-static": "^3.0.1",
        "@sveltejs/adapter-vercel": "^5.1.0",
        "@sveltejs/kit": "^2.5.0",
        "@sveltejs/vite-plugin-svelte": "^3.0.2",
        "@tailwindcss/typography": "^0.5.10",
        "@typescript-eslint/eslint-plugin": "^6.20.0",
        "@typescript-eslint/parser": "^6.20.0",
        "autoprefixer": "^10.4.17",
        "dotenv": "^16.4.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.35.1",
        "h3-js": "^4.1.0",
        "ol": "^8.2.0",
        "postgres": "^3.4.3",
        "prettier": "^3.2.4",
        "prettier-plugin-svelte": "^3.1.2",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "stylelint": "^16.2.0",
        "stylelint-config-standard": "^36.0.0",
        "stylelint-config-tailwindcss": "^0.0.7",
        "svelte": "^4.2.9",
        "svelte-check": "^3.6.3",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "valibot": "^0.27.1",
        "vite": "^5.0.12",
        "vite-plugin-tailwind-purgecss": "^0.2.0"
    }
}
